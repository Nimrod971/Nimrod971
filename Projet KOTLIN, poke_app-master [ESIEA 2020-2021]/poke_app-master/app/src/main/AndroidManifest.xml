<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poke_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.poke_app.presentation.PokeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/poke_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/poke_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Esiea3A">
        <activity android:name="com.example.poke_app.SplashActivity"

            android:theme="@style/SplashTheme">



            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.poke_app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Esiea3A.NoActionBar">

        </activity>
    </application>

</manifest>